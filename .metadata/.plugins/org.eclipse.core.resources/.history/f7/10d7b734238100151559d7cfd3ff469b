package Chapter2;

public class Number28 {
	public static int a = 123, len, counter = 0, arifmeticsumm;
	public static String s, b, c;

	public static void main(String[] args) {
		s = Integer.toString(a);
		len=s.length();

		for (int i = 0; i < s.length(); i++) {

			if (counter == 0) {
				b = s.substring(i, i+1);
				c = s.substring(i+1, i + 2);
				System.out.println(b+c);
				arifmeticsumm = Integer.valueOf(b) + Integer.valueOf(c);
				counter = 1;
			} else {
				b = s.substring(i);
				arifmeticsumm = arifmeticsumm + Integer.valueOf(b);
			}
		}
		arifmeticsumm=arifmeticsumm/len;
		
		//System.out.println(arifmeticsumm);
	}

}
