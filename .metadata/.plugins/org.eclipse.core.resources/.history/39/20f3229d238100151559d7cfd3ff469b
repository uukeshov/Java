package Chapter2;

public class Number28 {
	public static int a = 123, len, counter = 0, arifmeticsumm=0;
	public static String s, b, c,k;

	public static void main(String[] args) {
		s = Integer.toString(a);
		len=s.length();

		for (int i = 0; i < s.length(); i++) {

			if (counter == 0) {
				k = s.substring(i, i+1);
				
				arifmeticsumm = Integer.valueOf(k) + arifmeticsumm;
				counter = 1;
			} else {
				b="";
				b = s.substring(i, i+1);
				//System.out.print(b);
				arifmeticsumm = arifmeticsumm + Integer.valueOf(b);
			}
		}
		arifmeticsumm=arifmeticsumm/len;
		
		System.out.println(arifmeticsumm);
	}

}
